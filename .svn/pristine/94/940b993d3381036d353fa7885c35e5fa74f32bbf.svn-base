<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/write_off_recode_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:background="@color/white_ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/check_card_stock_recode_item_imgNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/check_card_stock_recode_item_imgNext"
            >
            <TextView
                android:id="@+id/check_card_stock_recode_item_tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize16"
                android:textColor="@color/grey_666666"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/check_card_stock_recode_item_tvCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize16"
                android:textColor="@color/grey_666666"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
