<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f8f8f8"
     >
    
     <include layout="@layout/menu_title_layout"/>
	
     <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="支付预设金额"
                    android:textSize="@dimen/TextSize18"
                    android:textColor="@color/black_333"
                    android:gravity="center"
                    />
                <EditText
	                android:id="@+id/setting_money_etMoney" 
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:hint="请设置默认支付金额！"
	                android:textSize="@dimen/TextSize14"
	                android:textColor="@color/black_333"
	                android:inputType="numberDecimal"
	                android:background="@null"
	                android:layout_marginLeft="5dp"
	                android:paddingLeft="10dp"
	                />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预设金额以“元”为单位，请填写后仔细核对！"
                android:textSize="@dimen/TextSize12"
                android:textColor="@color/red_FF1200"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                />
            <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <TextView
				    android:id="@+id/setting_money_tvOK"
				    style="@style/button_styles"
				    android:layout_margin="20dp"
					android:layout_marginTop="10dp"
				    ></TextView>
	        </LinearLayout>
        </LinearLayout>
</LinearLayout>
