<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white_f3f7fd"
    >
    <include layout="@layout/menu_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginTop="3dp"
        >
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:id="@+id/card_stock_recode_details_tvMerNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户名称"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/card_stock_recode_details_tvMerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/card_stock_recode_details_tvMerNameTitle"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/card_stock_recode_details_tvCardStockNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡劵名称"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/card_stock_recode_details_tvCaedStockName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/card_stock_recode_details_tvCardStockNameTitle"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核销劵码"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/card_stock_recode_details_tvCardStockCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核销状态"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/card_stock_recode_details_tvCardStockState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用时间"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/card_stock_recode_details_tvCardStockCreateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS设备号"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/card_stock_recode_details_tvDeviceNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
			    android:id="@+id/card_stock_recode_details_tvOk"
                style="@style/button_styles"
			    android:text="完成"
			    android:layout_marginTop="10dp"
                android:layout_margin="20dp"
			    ></TextView>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
			    android:id="@+id/card_stock_recode_details_tvPrint"
                style="@style/button_styles"
			    android:text="详情补打"
			    android:layout_marginTop="10dp"
			    android:layout_margin="20dp"
			    ></TextView>
        </LinearLayout>
    </LinearLayout>
	
</LinearLayout>
