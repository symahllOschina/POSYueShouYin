<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white_f3f7fd"
    >
    <include layout="@layout/menu_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
        >
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:id="@+id/order_details_tvMerchantNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户简称"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/business_details_tvMerchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxx"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/order_details_tvMerchantNameTitle"
                android:singleLine="true"
                android:ellipsize="end"
                android:minLines="1"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:id="@+id/again_print_layoutCardPay" 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:id="@+id/order_details_tvMerchantOrderIdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户号"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/business_details_tvMerchant_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxx"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/order_details_tvMerchantOrderIdTitle"
                android:singleLine="true"
                android:ellipsize="end"
                android:minLines="1"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/order_details_tvKuanTaiNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="款台名称"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/business_details_tvKuanTaiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxx"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/order_details_tvKuanTaiNameTitle"
                android:singleLine="true"
                android:ellipsize="end"
                android:minLines="1"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备号"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/business_details_tvTerminal_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxx"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS商户号"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/business_details_tvMercId_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS设备号"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/business_details_tvTrmNo_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批次号"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/business_details_tvBatchno_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxx"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
			    android:id="@+id/business_details_tvBack"
                style="@style/button_styles"
			    android:layout_margin="20dp"
			    ></TextView>
        </LinearLayout>
    </LinearLayout>
	
</LinearLayout>
