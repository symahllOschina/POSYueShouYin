<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    >
    <View style="@style/divider_line1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/main_tab_homeLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/main_tab_homeImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/main_home_nochecd_icon"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/main_tab_homeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="@dimen/TextSize14"
                android:layout_below="@id/main_tab_homeImg"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main_tab_reportLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/main_tab_reportImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/main_my_nochecd_icon"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/main_tab_reportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报表"
                android:textSize="@dimen/TextSize14"
                android:layout_below="@id/main_tab_reportImg"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main_tab_myLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/main_tab_myImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/main_my_nochecd_icon"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/main_tab_myText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="@dimen/TextSize14"
                android:layout_below="@id/main_tab_myImg"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
