<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white_f3f7fd"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            >
            <TextView 
                android:id="@+id/close_dialog_tvTextHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认交班退出？"
                android:textSize="@dimen/TextSize20"
                android:textColor="@color/gray_999"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/shift_hint_seleteStaffLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView 
                android:id="@+id/shift_hint_jbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交班人:"
                android:textSize="@dimen/TextSize22"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <ImageView 
                android:id="@+id/shift_hint_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/shift_hint_tvStaffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textSize="@dimen/TextSize18"
                android:textColor="@color/black_333"
                android:layout_toRightOf="@id/shift_hint_jbr"
                android:layout_toLeftOf="@id/shift_hint_img"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                />
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
        	android:paddingLeft="20dp"
        	android:paddingRight="20dp"
            >
            <TextView 
                android:id="@+id/shift_hint_tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="取   消"
                android:textSize="@dimen/TextSize17"
                android:textColor="@color/white_ffffff"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/button_cancel_style"
                android:gravity="center"
                />
            <TextView 
                android:id="@+id/shift_hint_tvOk"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="确   定"
                android:textSize="@dimen/TextSize17"
                android:textColor="@color/white_ffffff"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/button_confirm_style"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
