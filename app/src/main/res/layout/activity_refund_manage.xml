<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    >
    <include layout="@layout/menu_title_layout"/>
    <RelativeLayout
        android:id="@+id/refund_manage_cardRefundLayout"
        style="@style/manage_menu_relativelayout"
        >
        <ImageView
            android:id="@+id/refund_manage_cardImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/card_refund_icon"
            android:layout_centerVertical="true"
            />
        <TextView
            style="@style/manage_menu_textview"
            android:text="银行卡退款"
            android:layout_toRightOf="@id/refund_manage_cardImg"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/divider_line1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:id="@+id/refund_manage_scanRefundLayout"
        style="@style/manage_menu_relativelayout"
        >
        <ImageView
            android:id="@+id/refund_manage_scanImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/scan_refund_icon"
            android:layout_centerVertical="true"
            />
        <TextView
            style="@style/manage_menu_textview"
            android:text="扫码退款"
            android:layout_toRightOf="@id/refund_manage_scanImg"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/divider_line1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />


</LinearLayout>
