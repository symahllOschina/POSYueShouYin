<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@color/white_ffffff"
	>
	<include
		layout="@layout/menu_title_layout"
		/>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		>
		<TextView
			android:id="@+id/scan_refund_tvOrderIdTitle"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="原交易凭证号"
			android:textSize="@dimen/TextSize16"
			android:textColor="@color/black_000000"
			android:layout_centerVertical="true"
			android:gravity="center_vertical"
			/>

		<EditText
			android:id="@+id/card_refund_etOrderId"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:hint="请输入交易凭证号！"
			android:textSize="@dimen/TextSize14"
			android:textColor="@color/black_333"
			android:inputType="text"
			android:background="@null"
			android:layout_marginLeft="5dp"
			android:paddingLeft="5dp"
			android:layout_toRightOf="@id/scan_refund_tvOrderIdTitle"
			/>
	</RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal"
		>
		<TextView
			android:id="@+id/card_refund_tvOk"
			style="@style/button_styles"
			android:layout_marginTop="10dp"
			android:layout_margin="20dp"
			></TextView>
	</LinearLayout>

</LinearLayout>
