<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white_ffffff"
        >
        <TextView 
            android:id="@+id/settlement_record_item_tvStartTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2018-06-15 00:00:00"
            android:textSize="@dimen/TextSize12"
            android:textColor="@color/grey_666666"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/settlement_record_item_tvEndTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2018-06-15 00:00:00"
            android:textSize="@dimen/TextSize12"
            android:textColor="@color/grey_666666"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/settlement_record_item_tvName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="交班人"
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/grey_666666"
            android:gravity="center"
            />
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
	        android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
         <TextView 
            android:id="@+id/settlement_record_item_tvOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看"
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/button_confirm_style"
            /> 
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
